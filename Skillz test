    <title>Registration Form</title>
    <style>
        body {
            background-color: black;
            font-family: Arial, sans-serif;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 300px;
            text-align: center;
        }

        img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 10px;
            object-fit: cover;
            border: 2px solid white;
        }

        input {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
        }

        button {
            width: 100%;
            padding: 8px;
            margin-top: 10px;
            background-color: gray;
            color: white;
            border: none;
            cursor: pointer;
        }

        .message {
            display: none;
            margin-bottom: 10px;
            color: lightgreen;
        }
    </style>
